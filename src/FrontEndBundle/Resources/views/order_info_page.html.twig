{% extends '@FrontEnd/frontend_base.html.twig' %}

{% block body %}
    {% include 'FrontEndBundle:partial:_header.html.twig' %}

    <div class="well">
        {{ form_start(form) }}

        <div class="form-group {{ form_errors(form.first_name) ? 'has-error' : '' }}">
            {{ form_label(form.first_name) }}
            {{ form_widget(form.first_name, {'attr': {'class': 'form-control'}}) }}
            <span class="help-block">{{ form_errors(form.first_name) }}</span>
        </div>

        <div class="form-group {{ form_errors(form.last_name) ? 'has-error' : '' }}">
            {{ form_label(form.last_name) }}
            {{ form_widget(form.last_name, {'attr': {'class': 'form-control'}}) }}
            <span class="help-block">{{ form_errors(form.last_name) }}</span>
        </div>

        <div class="form-group {{ form_errors(form.country) ? 'has-error' : '' }}">
            {{ form_label(form.country) }}
            {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
            <span class="help-block">{{ form_errors(form.country) }}</span>
        </div>

        <div class="form-group {{ form_errors(form.postcode) ? 'has-error' : '' }}">
            {{ form_label(form.postcode) }}
            {{ form_widget(form.postcode, {'attr': {'class': 'form-control'}}) }}
            <span class="help-block">{{ form_errors(form.postcode) }}</span>
        </div>

        <div class="form-group {{ form_errors(form.address_line) ? 'has-error' : '' }}">
            {{ form_label(form.address_line) }}
            {{ form_widget(form.address_line, {'attr': {'class': 'form-control'}}) }}
            <span class="help-block">{{ form_errors(form.address_line) }}</span>
        </div>

        <div class="form-group {{ form_errors(form.email_address) ? 'has-error' : '' }}">
            {{ form_label(form.email_address) }}
            {{ form_widget(form.email_address, {'attr': {'class': 'form-control'}}) }}
            <span class="help-block">{{ form_errors(form.email_address) }}</span>
        </div>

        <div class="form-group {{ form_errors(form.phone_number) ? 'has-error' : '' }}">
            {{ form_label(form.phone_number) }}
            {{ form_widget(form.phone_number, {'attr': {'class': 'form-control'}}) }}
            <span class="help-block">{{ form_errors(form.phone_number) }}</span>
        </div>

        <button type="submit" class="btn btn-primary btn-raised">Submit</button>

        {{ form_end(form) }}
    </div>

{% endblock %}